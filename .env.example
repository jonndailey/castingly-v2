# MySQL/MariaDB Configuration
DB_HOST=localhost
DB_PORT=3306
# In production behind an SSH tunnel, prefer:
# DB_HOST=127.0.0.1
# DB_PORT=3307
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
JWT_SECRET=generate-secure-random-256-bit-key-for-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-secure-random-secret-for-nextauth

# Password Reset
RESET_TOKEN_SECRET=generate-secure-reset-token-secret
RESET_TOKEN_EXPIRY=3600

# File Storage (for future cloud storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=
# AWS_REGION=

# Email Service (for future implementation)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@castingly.com

# Dailey Core (production)
# Base URL for Core Auth. Server code will also read NEXT_PUBLIC_* if DAILEY_CORE_AUTH_URL is not set.
NEXT_PUBLIC_DAILEY_CORE_AUTH_URL=https://core.dailey.cloud
DAILEY_CORE_AUTH_URL=https://core.dailey.cloud

# App + tenant identifiers for Core
DAILEY_CORE_APP_SLUG=castingly-portal
DAILEY_CORE_TENANT_SLUG=castingly

# Do NOT set a client id unless explicitly provisioned by Core
# (Leaving this unset avoids 'Invalid application' responses.)
# DAILEY_CORE_CLIENT_ID=

# DMAPI (production)
NEXT_PUBLIC_DMAPI_BASE_URL=https://media.dailey.cloud
DMAPI_BASE_URL=https://media.dailey.cloud
DMAPI_APP_ID=castingly
DMAPI_SERVICE_EMAIL=
DMAPI_SERVICE_PASSWORD=
# Optional: scope folder listings to a known service subject id
# Set to the service account user id from DMAPI/Core
# DMAPI_LIST_USER_ID=

# Investor demo toggles (production-safe)
# Show demo login buttons in the login screen when true
NEXT_PUBLIC_ENABLE_INVESTOR_DEMO=false
# Allow demo credential fallback if Core login fails (avoid enabling in public prod)
NEXT_PUBLIC_ENABLE_DEMO_FALLBACK=false

# Legacy Castingly DB fallback (server only)
# Allow password login against local legacy DB when Core fails
# Disable in production once migration is complete
ENABLE_LEGACY_AUTH_FALLBACK=false
